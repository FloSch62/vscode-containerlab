{
  "name": "vscode-containerlab",
  "publisher": "Nokia",
  "displayName": "Containerlab",
  "description": "Manages containerlab topologies in VS Code",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.70.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/srl-labs/vscode-containerlab"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:your.extension.command",
    "onStartupFinished"
  ],
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "keywords": [
    "containerlab",
    "clab",
    "docker",
    "container",
    "containers"
  ],
  "license": "Apache-2.0",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "containerlabViewContainer",
          "title": "Containerlab",
          "icon": "resources/containerlab.svg"
        }
      ]
    },
    "views": {
      "containerlabViewContainer": [
        {
          "id": "containerlabExplorer",
          "name": "Containerlab Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "containerlab.refresh",
        "title": "Refresh Containerlab Explorer",
        "icon": "$(refresh)"
      },
      {
        "command": "containerlab.openLabFile",
        "title": "Open Lab File"
      },
      {
        "command": "containerlab.deployLab",
        "title": "Deploy Lab",
        "icon": "$(play)",
        "category": "Containerlab"
      },
      {
        "command": "containerlab.redeployLab",
        "title": "Redeploy Lab",
        "icon": "$(refresh)",
        "category": "Containerlab"
      },
      {
        "command": "containerlab.destroyLab",
        "title": "Destroy Lab",
        "icon": "$(trash)",
        "category": "Containerlab"
      },
      {
        "command": "containerlab.startNode",
        "title": "Start Node"
      },
      {
        "command": "containerlab.stopNode",
        "title": "Stop Node"
      },
      {
        "command": "containerlab.attachShell",
        "title": "Attach Shell"
      },
      {
        "command": "containerlab.sshNode",
        "title": "SSH Node"
      },
      {
        "command": "containerlab.showLogs",
        "title": "Show Logs"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "containerlab.refresh",
          "when": "view == containerlabExplorer",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "when": "resourceFilename =~ /\\.clab\\.(yml|yaml)$/",
          "command": "containerlab.deployLab",
          "group": "navigation@1"
        },
        {
          "when": "resourceFilename =~ /\\.clab\\.(yml|yaml)$/",
          "command": "containerlab.destroyLab",
          "group": "navigation@1"        },
        {
          "when": "resourceFilename =~ /\\.clab\\.(yml|yaml)$/",
          "command": "containerlab.redeployLab",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "containerlab.refresh",
          "when": "view == containerlabExplorer",
          "group": "navigation"
        },
        {
          "command": "containerlab.openLabFile",
          "when": "viewItem =~ /containerlabLab/",
          "group": "navigation"
        },
        {
          "command": "containerlab.deployLab",
          "when": "viewItem == containerlabLabUndeployed",
          "group": "navigation"
        },
        {
          "command": "containerlab.redeployLab",
          "when": "viewItem == containerlabLabDeployed",
          "group": "navigation"
        },
        {
          "command": "containerlab.destroyLab",
          "when": "viewItem == containerlabLabDeployed",
          "group": "navigation"
        },
        {
          "command": "containerlab.startNode",
          "when": "viewItem == containerlabContainer",
          "group": "navigation"
        },
        {
          "command": "containerlab.stopNode",
          "when": "viewItem == containerlabContainer",
          "group": "navigation"
        },
        {
          "command": "containerlab.attachShell",
          "when": "viewItem == containerlabContainer",
          "group": "navigation"
        },
        {
          "command": "containerlab.sshNode",
          "when": "viewItem == containerlabContainer",
          "group": "navigation"
        },
        {
          "command": "containerlab.showLogs",
          "when": "viewItem == containerlabContainer",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "containerlab.deployLab",
          "when": "resourceFilename =~ /\\.clab\\.(yml|yaml)$/"
        },
        {
          "command": "containerlab.redeployLab",
          "when": "resourceFilename =~ /\\.clab\\.(yml|yaml)$/"
        },
        {
          "command": "containerlab.destroyLab",
          "when": "resourceFilename =~ /\\.clab\\.(yml|yaml)$/"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+alt+d",
        "mac": "cmd+alt+d",
        "command": "containerlab.deployLab"
      },
      {
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r",
        "command": "containerlab.redeployLab"
      },
      {
        "key": "ctrl+alt+k",
        "mac": "cmd+alt+d",
        "command": "containerlab.destroyLab"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p ."
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.70.0",
    "typescript": "^5.7.3"
  }
}
